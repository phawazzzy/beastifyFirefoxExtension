{
    "manifest_version": 2,
    "name": "beastify",
    "version": "1.0",

    "description": "This is a firefox extension that replaces the content of the active tab web page with a picture of animals when the extension button is clicked on the browser toolbar",
    "homepage_url": "https://github.com/phawazzzy/beastify.git",
    "icons": {
        "48": "icons/beast.png"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "icons/beast-32.png",
        "default_title": "Beastify",
        "default_popup": "popup/beast.html"
    },

    "web_accessible_resources": [
        "beasts/frog.jpg",
        "beasts/snake.jpg",
        "beast/turtle.jpg"
    ]

}